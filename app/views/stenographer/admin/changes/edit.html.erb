<section class="section">
  <div class="container">
    <h1 class="title">
      Edit Change #<%= @change.id %>
    </h1>

    <h2 class="subtitle">
      <%= link_to 'Show', admin_change_path(@change.id) %>
      |
      <%= link_to 'Delete', admin_change_path(@change), :method => :delete, :data => { :confirm => 'Are you sure you want to delete this Change?' } %>
    </h2>

    <%= form_for @change, url: admin_change_path(@change), method: :patch do |f| %>
      <div class="field">
        <%= f.label :created_at, 'Date', class: 'label' %>
        <div class="control">
          <%= f.date_select(:created_at, { :order => [:month, :day, :year] }, { class: 'select' }) %>
        </div>
      </div>

      <div class="field">
        <%= f.label :message, class: 'label' %>
        <div class="control">
          <%= f.text_area :message, rows: 5, class: 'textarea' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :visible, class: 'label' %>
          <%= f.check_box :visible %>
        </div>
      </div>

      <div class="field">
        <%= f.label :change_type, class: 'label' %>
        <div class="control">
          <div class="select">
            <%= f.select :change_type, Stenographer::Change::VALID_CHANGE_TYPES, {} %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :environments, 'Environments (comma separated)', class: 'label' %>
        <div class="control">
          <%= f.text_field :environments, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= f.label :tracker_ids, 'Tracker IDs (comma separated)', class: 'label' %>
        <div class="control">
          <%= f.text_field :tracker_ids, class: 'input' %>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <%= f.submit 'Update Change', class: 'button is-link' %>
        </div>
        <div class="control">
          <%= link_to('Back', admin_change_path(@change.id), class: 'button is-text') %>
        </div>
      </div>
    <% end %>
  </div>
</section>